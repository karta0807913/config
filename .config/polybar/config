[module/screen-recorder]
type = custom/ipc
hook-0 = ~/.local/bin/statusbar/screen_gif
hook-1 = BLOCK_BUTTON=1 ~/.local/bin/statusbar/screen_gif
click-left = polybar-msg -p %pid% hook screen-recorder 2
initial = 1

[module/disk]
type = custom/script
interval=60
label=üè†HOME %output%
exec= ~/.local/bin/statusbar/disk poly

[module/ip]
type = custom/script
interval=60
label=IPÔºö%output%
exec=curl -s "ifconfig.me/ip"

[module/date]
type = custom/script
interval = 1.0
label=üìÖ%output%
exec=date '+%Y/%m/%d (%a) %I:%M%p'

