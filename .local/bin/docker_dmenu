#!/bin/sh

set -e

select="$(printf 'start\nstop\ndelete' | rofi -dmenu -i -no-custom -p "Docker" -location 2 -yoffset 32 -xoffset -10 -width 10 -lines 3)"

case "$select" in
    start)
        docker_exec
        ;;
    stop)
        docker_stop
        ;;
    delete)
        NAMES=$(docker container ls -f status=exited --format '{{ .Names  }}')
        OPTIONS=''
        for name in $NAMES;
        do
            OPTIONS="${OPTIONS}$(docker inspect "$name" --format '{{ .Name }} {{ .Config.Image }} {{ index .Config.Cmd 0 }};' | cut -c 2-)"
        done
        echo "$OPTIONS" | rofi -dmenu -sep ';' -p "üê≥ select delete contrinaer" -location 2 -yoffset 32 | {
            read TARGET others;
            echo "$TARGET"
            if [ "$(printf 'no\nyes' | rofi -dmenu -p "üê≥ delete container $target?" -location 2 -yoffset 32)" =  "yes" ]; then
                docker rm "$TARGET"
                notify-send "üê≥ delete container $target success"
            fi
        }
        ;;
esac
